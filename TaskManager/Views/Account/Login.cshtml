@model TaskManager.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Вход";
}

<div class="container-md my-auto">
        <div class="auth-form border border-dark rounded mx-auto col-6" style="min-width: 260px;">
            <form asp-action="User" asp-controller="Account" asp-antiforgery="true">
                <ul class="nav d-flex flex-nowrap">
                    <li class="nav-item border-bottom flex-fill text-center m-3 my-2">
                        <span class="nav-link active bg-secondary text-white">
                            Вход
                        </span>
                    </li>
                    <li class="flex-fill text-center nav-item border-bottom m-3 my-2">
                        <a class="nav-link text-dark" asp-action="Registration" asp-controller="Account">
                            Регистрация
                        </a>
                    </li>
                </ul>

                <div class="d-flex flex-nowrap">
                    <div class="flex-fill mt-3 mr-2">
                        <div class="form-group">
                            <input asp-for="Email" class="form-control" placeholder="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="password" asp-for="Password" class="form-control" placeholder="Пароль" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group mt-3 ml-2">
                        <input type="submit" value="Войти" class="login-button btn btn-dark btn-primary h-100" />
                    </div>
                </div>

                <div class="text-dark mb-2 ml-1">
                    <a class="reset-button text-dark" href="#">
                        <u>Забыли пароль?</u>
                    </a>
                </div>
            </form>
        </div>
    </div>

@section Footer{
    <footer class="text-center footer-team pb-4">
        <div>© 2021 WebDevTeam4Study</div>
    </footer>
}